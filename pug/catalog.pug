		script.
			if(document.location.href.includes('?filter=')) {
				const domainHref  = document.location.href
				const indexFIlter = domainHref.indexOf('?filter') + 8
				const filterValue = domainHref.slice(indexFIlter, indexFIlter + 20)
				const currentSelect = document.querySelector(`.select li[data-filter="${filterValue}"]`).innerHTML

				document.querySelector('.type__all').classList.remove('type__all_active')
				document.querySelector('.select').classList.add('select_current')
				document.querySelector('.select .select__head').innerHTML = currentSelect;


				document.querySelector(`.filter__type .li_active`).classList.remove('li_active')
				document.querySelector(`.filter__type li[data-filter=${filterValue}]`).classList.add('li_active')

				document.querySelectorAll(`.catalog__mark_active`).forEach(item => item.classList.remove('catalog__mark_active'))
				document.querySelector(`.catalog__mark[data-mark="${filterValue}"]`).classList.add('catalog__mark_active')

				
			} else {
				document.querySelectorAll(`.catalog__mark`).forEach(item => {
					item.classList.add('catalog__mark_active')
				})
			}


